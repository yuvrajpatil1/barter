{
  "name": "@./auth-service",
  "version": "0.0.1",
  "private": true,
  "nx": {
    "name": "auth-service",
    "targets": {
      "swagger-generate": {
        "executor": "nx:run-commands",
        "options": {
          "command": "cd apps/auth-service/src"
        }
      },
      "build": {
        "executor": "@nx/esbuild:esbuild",
        "outputs": [
          "{options.outputPath}"
        ],
        "defaultConfiguration": "production",
        "dependsOn": [
          "swagger-generate"
        ],
        "options": {
          "platform": "node",
          "outputPath": "apps/auth-service/dist",
          "format": [
            "cjs"
          ],
          "bundle": false,
          "main": "apps/auth-service/src/main.ts",
          "tsConfig": "apps/auth-service/tsconfig.app.json",
          "assets": [
            {
              "input": "apps/auth-service/src",
              "glob": "swagger-output.json",
              "output": "."
            }
          ],
          "esbuildOptions": {
            "sourcemap": true,
            "outExtension": {
              ".js": ".js"
            }
          }
        },
        "configurations": {
          "development": {
            "dependsOn": [
              "swagger-generate"
            ]
          },
          "production": {
            "generateLockfile": true,
            "dependsOn": [
              "swagger-generate"
            ],
            "esbuildOptions": {
              "sourcemap": false,
              "outExtension": {
                ".js": ".js"
              }
            }
          }
        }
      },
      "serve": {
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "auth-service:build",
          "runBuildTargetDependencies": false
        },
        "configurations": {
          "development": {
            "buildTarget": "auth-service:build:development"
          },
          "production": {
            "buildTarget": "auth-service:build:production"
          }
        }
      },
      "test": {
        "options": {
          "passWithNoTests": true
        }
      },
      "docker-build": {
        "dependsOn": [
          "build"
        ],
        "command": "docker build -f apps/auth-service/Dockerfile . -t auth-service"
      }
    }
  },
  "dependencies": {
    "swagger-autogen": "^2.23.7"
  }
}
